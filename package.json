{
	"name": "jup-perps-client",
	"version": "1.1.0",
	"description": "TypeScript client for Jupiter Perpetuals Protocol generated from IDL using Codama",
	"type": "module",
	"private": true,
	"scripts": {
		"generate": "bun generator/js/generate.ts",
		"compile": "cd js-client && bunx tsc && bun ../generator/js/add-jsdoc.ts",
		"build:js": "bun generate && bun compile",
		"example": "bun js-client/example.ts",
		"publish": "cd js-client && npm publish",
		"publish:dry": "cd js-client && npm publish --dry-run",
		"format": "bunx biome format --write",
		"lint": "bunx biome lint --write",
		"check": "bunx biome check --write"
	},
	"keywords": [
		"solana",
		"jupiter",
		"perpetuals",
		"codama",
		"typescript",
		"defi",
		"trading"
	],
	"author": "monakki",
	"license": "MIT",
	"homepage": "https://github.com/monakki/jup-perps-client#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/monakki/jup-perps-client.git"
	},
	"bugs": {
		"url": "https://github.com/monakki/jup-perps-client/issues"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@codama/nodes-from-anchor": "^1.2.2",
		"@codama/renderers": "^1.0.26",
		"@solana/kit": "^2.3.0",
		"@types/bun": "^1.2.18",
		"codama": "^1.3.0",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=10.0.0"
	},
	"funding": {
		"type": "custom",
		"url": "https://github.com/monakki/jup-perps-client#-support"
	}
}